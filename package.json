{
  "name": "n8n-nodes-mercadopago-flow",
  "version": "1.4.1",
  "description": "n8n node para integração completa com a API do Mercado Pago - Pagamentos PIX, Assinaturas, Planos, Webhooks e muito mais (15 recursos disponíveis)",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "n8n-node",
    "mercadopago",
    "pix",
    "assinaturas",
    "pagamentos",
    "brasil",
    "payment",
    "subscription",
    "webhook"
  ],
  "bugs": {
    "url": "https://github.com/eliveutonsouza/n8n-nodes-mercadopago-flow/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/eliveutonsouza/n8n-nodes-mercadopago-flow",
  "author": {
    "name": "Eliveuton Souza",
    "email": "eliveuton3m@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eliveutonsouza/n8n-nodes-mercadopago-flow.git"
  },
  "main": "index.js",
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "lint": "eslint nodes credentials --ext .ts",
    "lintfix": "eslint nodes credentials --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:local": "ts-node test/local/index.ts",
    "test:real": "ts-node test/integration/real-api-test.ts",
    "test:frontend": "ts-node test/local/test-with-frontend-data.ts",
    "test:server": "ts-node test/local/server-with-capture.ts",
    "frontend:config": "node test/generate-config.js",
    "frontend:dev": "npm run frontend:config && echo 'Abra test/frontend-test.html no navegador'",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 2,
    "nodes": [
      "dist/nodes/MercadoPago/MercadoPago.node.js"
    ],
    "credentials": [
      "dist/credentials/MercadoPagoApi.credentials.js"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.28.0",
    "eslint-plugin-n8n-nodes-base": "~1.11.0",
    "gulp": "^4.0.2",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "n8n-workflow": "*",
    "prettier": "^2.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
